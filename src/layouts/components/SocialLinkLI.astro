---
import Email from "@ico/Email.alternate.astro";
import Facebook from "@ico/Facebook.ico.astro";
import Instagram from "@ico/Instagram.ico.astro";
import LinkedIn from "@ico/LinkedIn.ico.astro";
import YouTube from "@ico/Youtube.ico.astro";

const { href, name, showLabel = false } = Astro.props;

const iconMap = {
  Email,
  Facebook,
  Instagram,
  LinkedIn,
  YouTube,
};

const IconComponent = iconMap[name];
---

<li>
  <a
    href={href}
    rel="noreferrer"
    target="_blank"
    class="text-primary transition hover:text-primary-lighter flex items-center space-x-2"
  >
    {IconComponent && <IconComponent class="size-6" />}
    {showLabel && <span>{name}</span>}
  </a>
</li>
