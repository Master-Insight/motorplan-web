---
const { item } = Astro.props;
const { slug, descripcion, cuotasdesde, foto } = item;
---

<a
  href={`/producto/${slug}`}
  class="group bg-slate-100 rounded-3xl overflow-hidden shadow-sm hover:shadow-2xl transition-all duration-300 border border-transparent hover:border-slate-200"
>
  <div class="relative w-full min-h-96 max-h-96 p-4">
    <img
      src={foto || "/images/placeholder.svg"}
      alt={descripcion}
      class="object-contain rounded-2xl"
      transition:name={`img-${slug}`}
    />
  </div>

  <div class="p-6 text-center">
    <h3 class="text-xl font-semibold h-14 mb-5 line-clamp-2">{descripcion}</h3>
    <div class="flex flex-col items-center">
      <p>Cuota desde:</p>
      <p class="text-3xl font-bold text-secondary mb-6">
        ${cuotasdesde.toLocaleString()}
      </p>
    </div>

    <div
      class="block w-full bg-primary group-hover:bg-primary-dark text-white font-medium py-3 px-4 rounded-lg text-center transition-colors"
    >
      Ver producto
    </div>
  </div>
</a>
