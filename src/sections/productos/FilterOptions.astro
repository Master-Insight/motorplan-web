---
import Filter from "@/components/Filter.astro";

const { data } = Astro.props
const options = data.map((option: { Clasificador: any }) => {
  return option.Clasificador
})
const uniqueValues = Array.from(new Set(options.filter(item => item !== '')))
const areOptions = uniqueValues.length >= 1
---

{
  areOptions ? 
  (<div class="flex flex-col w-full p-12 text-center">
  <h2 class="text-3xl">Filtrar por marca</h2>
  </div>) :
  null
}

<section class="grid lg:grid-cols-5 grid-cols-3 gap-y-6 gap-x-4 mb-16">
  {areOptions ? <Filter title="TODAS" /> : null}
  {uniqueValues.map((option) => (<Filter title={option}/>))}
</section>