---
import config from "../../../config.js";
const telefono = config.empresa.whatsapp;
---

<section class="bg-primary-darker w-full">
  <div class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-8 lg:grid-cols-5">
      <!-- Formulario -->
      <div class="rounded-lg bg-white p-6 shadow-lg lg:col-span-3 lg:p-12">
        <iframe
          src="https://docs.google.com/forms/d/e/1FAIpQLSccqhUMPOEMPIJVMnR3zw4lBH_pYfpwjJQQzhD28qyy4_kNHw/viewform?embedded=true"
          width="100%"
          height="900"
          class="rounded-md border border-gray-300"
          frameborder="0"
          marginheight="0"
          marginwidth="0"
        >
          Cargando…
        </iframe>
      </div>

      <!-- Información de contacto -->
      <div class="lg:col-span-2 flex flex-col justify-center p-8 text-white">
        <h2 class="text-3xl font-bold">¡Escribinos! Estamos para ayudarte.</h2>
        <p class="mt-6 text-lg">También podés llamarnos al:</p>
        <p class="text-2xl font-bold">{telefono}</p>

        <p class="mt-6 text-lg">O enviarnos un WhatsApp al:</p>
        <p class="text-2xl font-bold">{telefono}</p>
      </div>
    </div>
  </div>
</section>
