---
const pages = [
  {
    name: "Inicio",
    href: "/"
  },
  {
    name: "Planes",
    href: "/plan"
  },
  {
    name: "Adjudicados",
    href: "/adjudicados"
  },
  {
    name: "Institucional",
    href: "/institucional"
  },
  {
    name: "Contacto",
    href: "/contacto"
  },
  {
    name: "Mi Situaci√≥n",
    href: "#",
    isProfile: true
  },
]

const currentPath = Astro.url.pathname;
---

<header class="fixed w-full bg-white shadow-md transition-transform duration-300 z-50">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <a href="/" class="text-xl font-bold text-highlight">Motorplan</a>
      <nav class="hidden md:block">
        <ul class="flex space-x-4 items-center">
          {pages.map((link) => (
            <li>
              <a 
                href={link.href} 
                class:list={
                  [
                    "items-center text-sm font-medium transition-all duration-300 hover:text-secondary relative",
                    { 
                      "hover:after:absolute hover:after:bottom-[-2px] hover:after:left-0 hover:after:w-full hover:after:h-0.5 hover:after:bg-secondary": !link.isProfile,
                      "border border-black rounded-lg py-2 px-3 hover:border-secondary": link.isProfile,
                      "after:absolute after:bottom-[-2px] after:left-0 after:w-full after:h-0.5 after:bg-secondary": currentPath === link.href && currentPath !== "/"
                    }
                  ]  
                }
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </div>
  </div>
</header>